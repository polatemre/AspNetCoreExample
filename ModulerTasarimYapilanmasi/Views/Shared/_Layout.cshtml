<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ModulerTasarimYapilanmasi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ModulerTasarimYapilanmasi.styles.css" asp-append-version="true" />
</head>
<body>
    @*@Html.Partial("~/Views/Home/Partials/_HeaderPartial.cshtml")*@
    @*@{
        Html.RenderPartial("~/Views/Home/Partials/_HeaderPartial.cshtml");
        }*@
    <!--Tag Helper kullanacağız-->
    <partial name="~/Views/Home/Partials/_HeaderPartial.cshtml" />

    <div>
        @*<partial name="~/Views/Home/Partials/_SliderPartial.cshtml" />*@
        <partial name="~/Views/Home/Partials/_SliderPartial.cshtml" model="ViewBag.Data" /> <!--Bu partial'a bir data gönderdik.-->
    </div>

    <div>
        @RenderSection("sagTaraf", false) <!--Buraya partiallardan değer gönderemeyiz.-->
    </div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
        <div class="row">
            <div class="col-md-12">
                @await Component.InvokeAsync("Employee")
                @*@await Component.InvokeAsync("Employee", new { id = 5 }) *@ <!-- Buradan .cs dosyasına değer gönderip ona göre componenti şekillendirebilmekteyiz. -->
            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - ModulerTasarimYapilanmasi - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
